<% layout('layouts/boilerplate')%>

    <h1>Campgrounds</h1>
    <% for(campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="<%= campground.image %>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h3 class="card-title"><a href="/campgrounds/<%= campground._id %>">
                                <%= campground.title %>
                            </a></h3>
                        <h5 class="text-muted">
                            <%= campground.location%>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View Campground</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>