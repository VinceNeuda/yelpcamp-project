<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <!-- Displays Campground Details -->
    <div class="row">
        <div class="col-6">
            <div class="card mb-5">
                <img src="<%= campground.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h3 class="card-title">
                        <%= campground.title %>
                    </h3>
                    <h5 class="card-title text-muted">
                        <%= campground.location %>
                    </h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <p>
                            <%=campground.description %>
                        </p>
                    </li>
                    <li class="list-group-item">
                        <h5>$<%= campground.price %> / night</h5>
                    </li>
                    <li class="list-group-item text-muted">Owner:
                        <%= campground.author.username %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds" class="card-link btn btn-secondary">Back</a>
                    <% if( currentUser && campground.author.equals(currentUser)) {%>
                        <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-info">Edit</a>
                        <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <% } %>
                </div>
            </div>
        </div>

        <!-- Displays Review Form (When Logged In) -->
        <div class="col-6">
            <% if(currentUser){ %>
                <h6>Leave a review:</h6>
                <form class="mb-3 validated-form" action="/campgrounds/<%=campground._id%>/reviews" method="POST"
                    novalidate>
                    <fieldset class="starability-basic">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <input type="text" class="form-control" name="review[title]" id="title" cols="30" rows="1"
                            placeholder="Title" required></textarea>
                        <div class="invalid-feedback">
                            Title cannot be empty!
                        </div>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            placeholder="Leave a comment.." required></textarea>
                        <div class="invalid-feedback">
                            Review cannot be empty!
                        </div>
                    </div>
                    <button class="btn btn-success mb-3">Submit Review</button>
                </form>
                <% } %>

                    <!-- Displays Reviews on Campground Show Page -->
                    <h5>Customer Reviews</h5>
                    <% for (let review of campground.reviews){ %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">
                                        <%= review.title %>
                                    </h5>
                                    <p class="text-muted small mb-0">by <%= review.author.username %>
                                    </p>
                                </div>
                                <p class="starability-result" data-rating="<%=review.rating%>">
                                    Rated: <%= review.rating %> stars
                                </p>
                                <p class="card-text">
                                    <%=review.body %>
                                </p>
                                <% if( currentUser && review.author.equals(currentUser)) {%>
                                    <form
                                        action="/campgrounds/<%=campground._id%>/reviews/<%= review._id %>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-danger btn-sm">Remove</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>
    </div>