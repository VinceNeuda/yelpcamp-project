<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" novalidate
                class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title : </label>
                    <input class="form-control text-muted" type="text" id="title" name="campground[title]"
                        value="<%= campground.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location : </label>
                    <input class="form-control text-muted" type="text" id="location" name="campground[location]"
                        value="<%= campground.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Enter Image URL : </label>
                    <input class="form-control text-muted" type="text" id="image" name="campground[image]"
                        value="<%= campground.image %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description : </label>
                    <textarea class="form-control text-muted" type="text" id="description"
                        name="campground[description]" required><%= campground.description %></textarea>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control text-muted" placeholder="0.00" name="campground[price]"
                        value="<%= campground.price %>" required>
                    <span class=" input-group-text">per night</span>
                </div>
                <div class="mb-3">
                    <a href="/campgrounds/<%=campground._id %>" class="card-link btn btn-secondary">Back</a>
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
        </div>
    </div>